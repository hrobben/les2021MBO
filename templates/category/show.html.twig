{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td><b>{{ category.description }}</b></td>
            </tr>
        </tbody>
    </table>

    {% set products = category.products %}
    <table class="table">
        {% include('product/_inc_tbody_product.html.twig') %}
    </table>

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
    <a href="{{ path('category_pdf', {'id': category.id}) }}">pdf</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
